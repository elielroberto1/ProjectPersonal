@model PersonalProjeto.Models.Personal

<h2>Edit Personal</h2>

<form asp-action="AtualizarPersonal" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cref"></label>
        <input asp-for="Cref" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Experiencia"></label>
        <input asp-for="Experiencia" class="form-control" />
    </div>

    <!-- Campo oculto para o Id -->
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
